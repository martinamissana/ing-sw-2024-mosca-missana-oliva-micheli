                        <Button fx:id="globalSendButton" layoutX="324.0" layoutY="152.0" mnemonicParsing="false" onMouseClicked="#sendMessage" prefHeight="25.0" prefWidth="25.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="p1" closable="false" text="p1">
