      <Label fx:id="statusMessage" layoutX="394.0" layoutY="318.0" />
      <ImageView fitHeight="250.0" fitWidth="250.0" layoutX="325.0" layoutY="15.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/logo.png" />
         </image></ImageView>
      <TextField fx:id="IP" alignment="CENTER" layoutX="350.0" layoutY="460.0" onKeyTyped="#modifyTags" prefHeight="25.0" prefWidth="170.0" promptText="Insert IP address" />
      <Label fx:id="connectionError" alignment="CENTER" layoutX="375.0" layoutY="430.0" prefWidth="150.0" textFill="RED" />
