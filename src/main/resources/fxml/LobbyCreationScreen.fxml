<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="365.0" minWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <AnchorPane>
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" text="back" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />
         </children>
      </AnchorPane>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" style="-fx-spacing: 5;">
         <children>
             <TextField fx:id="displayText" alignment="CENTER" editable="false" focusTraversable="false" mouseTransparent="true" style="-fx-background-color: #00000000;" text="select the number of players">
                 <font>
                     <Font name="Roboto Mono Bold Italic" size="12.0" />
                 </font>
                 <cursor>
                     <Cursor fx:constant="DEFAULT" />
                 </cursor>
             </TextField>
            <Spinner fx:id="numOfPlayersSpinner" />
            <Button fx:id="createLobbyButton" mnemonicParsing="false" text="create lobby" />
         </children>
      </VBox>
   </children>
</StackPane>
