   <children>
      <MenuButton fx:id="connectionMenu" layoutX="455.0" layoutY="340.0" mnemonicParsing="false" text="TCP">
         <items>
            <MenuItem fx:id="TCP" onAction="#chooseConnection" text="TCP" />
            <MenuItem fx:id="RMI" onAction="#chooseConnection" text="RMI" />
         </items>
      </MenuButton>
      <TextField fx:id="nicknameField" alignment="CENTER" layoutX="340.0" layoutY="288.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" onKeyTyped="#modifyTags" prefWidth="220.0" promptText="Insert username" />
