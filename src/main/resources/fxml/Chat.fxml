                  </AnchorPane>
              </content>
          </Tab>
          <Tab fx:id="p2" closable="false" text="p2">
              <content>
                  <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                      <children>
                          <ListView fx:id="p2Messages" prefHeight="150.0" prefWidth="350.0" />
                        <TextField fx:id="p2Text" layoutX="2.0" layoutY="152.0" prefHeight="25.0" prefWidth="320.0" promptText="Write a message" />
                          <Button fx:id="p2SendButton" layoutX="324.0" layoutY="152.0" mnemonicParsing="false" onMouseClicked="#sendMessage" prefHeight="25.0" prefWidth="25.0" />
