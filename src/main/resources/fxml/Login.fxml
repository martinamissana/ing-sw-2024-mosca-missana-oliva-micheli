         <children>
            <Circle fill="WHITE" radius="10.0" stroke="WHITE" strokeType="INSIDE" />
            <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../images/infoImage.png" />
               </image>
            </ImageView>
         </children>
      </StackPane>
      <Pane fx:id="connectionPane" layoutX="325.0" layoutY="500.0" prefHeight="75.0" prefWidth="250.0">
         <children>
            <TextField fx:id="port" alignment="CENTER" layoutX="25.0" layoutY="5.0" onKeyTyped="#modifyTags" prefHeight="25.0" prefWidth="170.0" promptText="Insert port" />
            <StackPane fx:id="infoPort" layoutX="205.0" layoutY="7.5">
               <children>
                  <Circle fill="WHITE" radius="10.0" stroke="WHITE" strokeType="INSIDE" />
                  <ImageView fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../images/infoImage.png" />
                     </image></ImageView>
               </children>
            </StackPane>
         </children></Pane>
   </children>
</AnchorPane>
